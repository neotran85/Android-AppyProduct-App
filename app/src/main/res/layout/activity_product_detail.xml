<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.appyproduct.product.detail.ProductDetailActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="navigator"
            type="com.appyhome.appyproduct.mvvm.ui.appyproduct.product.detail.ProductDetailNavigator" />

        <variable
            name="viewModel"
            type="com.appyhome.appyproduct.mvvm.ui.appyproduct.product.detail.ProductDetailViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/clRootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <LinearLayout
                android:id="@+id/activityMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        style="@style/Toolbar"
                        android:layout_marginLeft="-14dp"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

                </android.support.design.widget.AppBarLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <com.daimajia.slider.library.SliderLayout
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_height="240dp" />

                        <TextView
                            fontPath="fonts/TitilliumWeb-Semi.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:lines="2"
                            android:text="Remove Remove Remove Remove Remove"
                            android:textColor="@color/medium_dark_gray"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                fontPath="fonts/TitilliumWeb-Semi.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RM 51.21"
                                android:textColor="@color/red_price"
                                android:textSize="18sp" />

                            <TextView
                                fontPath="fonts/TitilliumWeb-Semi.ttf"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_weight="1"
                                android:text="(Available)"
                                android:textColor="@color/dark_gray"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/icon_favorite" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginStart="10dp"
                                    android:src="@mipmap/icon_share" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                fontPath="fonts/TitilliumWeb-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Quantity"
                                android:textColor="@color/medium_dark_gray"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:background="@mipmap/bg_cal"
                                android:gravity="center">

                                <TextView
                                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="6dp"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <TextView
                                fontPath="fonts/TitilliumWeb-Bold.ttf"
                                android:layout_width="42dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/red_price"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@mipmap/bg_cal">

                                    <TextView
                                        fontPath="fonts/TitilliumWeb-Bold.ttf"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="4dp"
                                        android:gravity="center"
                                        android:text="+"
                                        android:textColor="@color/white"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="4.5"
                                    android:stepSize="0.5" />

                                <TextView
                                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="2dp"
                                    android:gravity="center"
                                    android:text="(124)"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="18dp"
                            android:background="@mipmap/sample_variation"
                            android:layout_width="match_parent"
                            android:layout_height="90dp" />
                        <LinearLayout
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@mipmap/icon_car_shipping"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp" />
                                <TextView
                                    android:layout_marginStart="10dp"
                                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Shipping to : "
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />
                                <TextView
                                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="4dp"
                                    android:gravity="center"
                                    android:text="Kuala Lumpur, Selangor"
                                    android:textColor="@color/medium_dark_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginStart="32dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="2dp"
                                    android:gravity="center"
                                    android:text="Shipping fee : "
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />
                                <TextView
                                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="4dp"
                                    android:gravity="center"
                                    android:text="RM 5.30"
                                    android:textColor="@color/medium_dark_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>

    </FrameLayout>

</layout>