<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingTop="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:text="Services"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="38dp">

        <ImageButton
            android:id="@+id/ibHomeCleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:background="@mipmap/service_cleaning"/>

        <ImageButton
            android:id="@+id/ibAirConServicing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/service_aircon"/>

        <ImageButton
            android:id="@+id/ibElectricalService"
            android:alpha="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="160dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/service_electrical" />

        <ImageButton
            android:id="@+id/ibPlumbingService"
            android:alpha="0.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="240dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/service_plumbing"/>
    </RelativeLayout>
</LinearLayout>
