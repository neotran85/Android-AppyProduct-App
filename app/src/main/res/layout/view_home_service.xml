<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingTop="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="@string/home_services"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="22dp"
        android:paddingStart="14dp">

        <ImageButton

            android:id="@+id/ibHomeCleaning"
            android:layout_width="78dp"
            android:layout_height="74dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/service_cleaning" />

        <ImageButton
            android:id="@+id/ibAirConServicing"
            android:layout_width="78dp"
            android:layout_height="74dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/service_aircon" />

        <ImageButton
            android:id="@+id/ibElectricalService"
            android:layout_width="78dp"
            android:layout_height="74dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:alpha="0.3"
            android:background="@mipmap/service_electrical" />

        <ImageButton
            android:id="@+id/ibPlumbingService"
            android:layout_width="78dp"
            android:layout_height="74dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:alpha="0.4"
            android:background="@mipmap/service_plumbing" />
    </LinearLayout>
</LinearLayout>
