<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.appyhome.appyproduct.mvvm.ui.main.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.appyhome.appyproduct.mvvm.ui.main.MainViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/screenView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"></LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            app:tabTextAppearance="@style/AppyTabLayoutTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:elevation="10dp"
            android:paddingTop="4dp"
            android:background="@mipmap/tab_bg"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <android.support.design.widget.TabItem
                android:id="@+id/homeTab"
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:icon="@mipmap/tab_home" />

            <android.support.design.widget.TabItem
                android:id="@+id/notificationTab"
                android:text="Notification"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:icon="@mipmap/tab_notification" />

            <android.support.design.widget.TabItem
                android:id="@+id/appyServiceTab"
                android:text="Appy Service"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:icon="@mipmap/tab_appyservice" />

            <android.support.design.widget.TabItem
                android:id="@+id/wishlistTab"
                android:text="Wishlist"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:icon="@mipmap/tab_wishlist" />

            <android.support.design.widget.TabItem
                android:id="@+id/myProfileTab"
                android:text="My Profile"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:icon="@mipmap/tab_profile" />
        </android.support.design.widget.TabLayout>

    </LinearLayout>

</layout>