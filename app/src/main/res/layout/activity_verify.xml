<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.appyhome.appyproduct.mvvm.ui.login.LoginActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.appyhome.appyproduct.mvvm.ui.register.verify.VerifyViewModel" />

    </data>

    <FrameLayout
        android:id="@+id/viewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/login_whole_bg"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/appyhome_logo_icon" />

                <TextView
                    android:id="@+id/logoImageView"
                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Phone Number Verification"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_round_login_dialog_bg"
                    android:orientation="vertical"
                    android:paddingBottom="24dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="22dp">

                    <TextView
                        android:id="@+id/txtError"
                        fontPath="fonts/TitilliumWeb-Italic.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/please_note_all_values_are_required"
                        android:textColor="@color/red_dark"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etRetypedPassword"
                            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_text_rounded_bg"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="@string/retype_verifying_code"
                            android:inputType="number"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_text"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <Button
                        android:id="@+id/btnNext"
                        style="?android:attr/borderlessButtonStyle"
                        fontPath="fonts/TitilliumWeb-Bold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_rounded_bg_orange_click"
                        android:gravity="center"
                        android:onClick="@{() -> viewModel.onServerRegisterClick()}"
                        android:shadowRadius="0"
                        android:text="@string/send_code_verification"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/btPrivacyPolicy"
                        fontPath="fonts/TitilliumWeb-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:onClick="@{()->viewModel.onPrivacyPolicyClick()}"
                        android:text="Resend the code"
                        android:textColor="@color/light_blue"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}">

            <include
                android:visibility="gone"
                layout="@layout/view_preloading"></include>
        </LinearLayout>

    </FrameLayout>

</layout>