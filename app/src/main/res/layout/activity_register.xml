<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.appyhome.appyproduct.mvvm.ui.login.LoginActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.appyhome.appyproduct.mvvm.ui.register.RegisterViewModel" />

    </data>

    <FrameLayout
        android:id="@+id/viewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/login_whole_bg"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/appyhome_logo_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/logoImageView"
                    fontPath="fonts/TitilliumWeb-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@color/colorAccent"
                    android:textSize="28dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_round_login_dialog_bg"
                    android:orientation="vertical"
                    android:paddingBottom="24dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="22dp">

                    <TextView
                        fontPath="fonts/TitilliumWeb-Italic.ttf"
                        android:textSize="12sp"
                        android:id="@+id/txtError"
                        android:textColor="@color/red_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Please all values are required." />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etFirstName"
                            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@drawable/input_text_rounded_bg"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="First name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_text"
                            android:textSize="14sp" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etLastName"
                            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/input_text_rounded_bg"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Last name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_text"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etEmailAddress"
                            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_text_rounded_bg"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Your email address"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etNumberPhone"
                            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_text_rounded_bg"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Enter a valid phone number"
                            android:inputType="phone"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etAccountPassword"
                            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_text_rounded_bg"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Type an account password"
                            android:inputType="textPassword"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etRetypedPassword"
                            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_text_rounded_bg"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="Retype the password"
                            android:inputType="textPassword"
                            android:maxLength="50"
                            android:paddingBottom="10dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:onClick="@{() -> viewModel.onServerRegisterClick()}"
                        android:id="@+id/btnNext"
                        style="?android:attr/borderlessButtonStyle"
                        fontPath="fonts/TitilliumWeb-Bold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/button_rounded_bg_orange_click"
                        android:gravity="center"
                        android:shadowRadius="0"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I have read and understood Appyhomeplus's"
                            android:textColor="@color/dark_gray"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                fontPath="fonts/TitilliumWeb-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:background="@null"
                                android:gravity="center"
                                android:text="Terms Of Usage"
                                android:textColor="@color/light_blue"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" and"
                                android:textColor="@color/dark_gray"
                                android:textSize="11sp" />

                            <Button
                                fontPath="fonts/TitilliumWeb-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:background="@null"
                                android:gravity="center"
                                android:text="Privacy Policy"
                                android:textColor="@color/light_blue"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}">

            <include
                layout="@layout/view_preloading"
                android:visibility="visible"></include>
        </LinearLayout>

    </FrameLayout>

</layout>