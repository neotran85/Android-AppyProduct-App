<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="navigator"
            type="com.appyhome.appyproduct.mvvm.ui.appyproduct.product.list.filter.FilterNavigator" />

        <variable
            name="viewModel"
            type="com.appyhome.appyproduct.mvvm.ui.appyproduct.product.list.filter.FilterViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_opacity_50">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Shipping From"
                        android:textColor="@color/semi_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnLocal"
                            android:layout_width="124dp"
                            android:layout_height="32dp"
                            android:background="@mipmap/bg_radius_button_gray"
                            android:text="Local"
                            android:textColor="@color/semi_gray"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btnOversea"
                            android:layout_width="124dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="16dp"
                            android:background="@mipmap/bg_radius_button_gray"
                            android:text="Oversea"
                            android:textColor="@color/semi_gray"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Product Discount"
                        android:textColor="@color/semi_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnBulkPurchase"
                            android:layout_width="124dp"
                            android:layout_height="32dp"
                            android:background="@mipmap/bg_radius_button_gray"
                            android:text="Bulk Purchase"
                            android:textColor="@color/semi_gray"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btnPromotional"
                            android:layout_width="124dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="16dp"
                            android:background="@mipmap/bg_radius_button_gray"
                            android:text="Promotional"
                            android:textColor="@color/semi_gray"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnPremium"
                        android:layout_width="124dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:background="@mipmap/bg_radius_button_gray"
                        android:text="Premium"
                        android:textColor="@color/semi_gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Price Range (RM)"
                        android:textColor="@color/semi_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etPriceMin"
                            android:layout_width="114dp"
                            android:layout_height="32dp"
                            android:background="@mipmap/bg_radius_button_gray"
                            android:gravity="center"
                            android:hint="Min"
                            android:inputType="number"
                            android:textColor="@color/semi_gray"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="36dp"
                            android:layout_height="2dp"
                            android:background="@color/gray" />

                        <EditText
                            android:id="@+id/etPriceMax"
                            android:layout_width="114dp"
                            android:layout_height="32dp"
                            android:background="@mipmap/bg_radius_button_gray"
                            android:gravity="center"
                            android:hint="Max"
                            android:inputType="number"
                            android:textColor="@color/semi_gray"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Rating"
                        android:textColor="@color/semi_gray"
                        android:textSize="14sp" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:numStars="5"
                        android:rating="4.5"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:stepSize="0.5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#BFBBBB"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="RESET"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <Button
                    android:onClick="@{(view) -> navigator.applyFilter()}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="APPLY"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>