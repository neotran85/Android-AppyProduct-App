<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="#BFFFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_round_shadow"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="42dp"
        android:paddingRight="42dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/txtError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Please input your value"
            android:textColor="@color/red_dark"
            android:textSize="12sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etNewValue1"
            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_text_rounded_bg"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="Your birthday"
            android:inputType="phone"
            android:maxLength="50"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etNewValue2"
            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_text_rounded_bg"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="Your birthday"
            android:inputType="phone"
            android:maxLength="50"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp"
            android:visibility="gone" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etNewValue3"
            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_text_rounded_bg"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="Your birthday"
            android:inputType="phone"
            android:maxLength="50"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp"
            android:visibility="gone" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etNewValue4"
            fontPath="fonts/TitilliumWeb-SemiBoldItalic.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_text_rounded_bg"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="Your birthday"
            android:inputType="phone"
            android:maxLength="50"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/button_rounded_bg_gray"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnOkay"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_rounded_bg_orange_click"
                android:text="Okay"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>