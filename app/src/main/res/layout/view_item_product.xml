<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="navigator"
            type="com.appyhome.appyproduct.mvvm.ui.appyproduct.product.list.adapter.ProductItemNavigator" />

        <variable
            name="viewModel"
            type="com.appyhome.appyproduct.mvvm.ui.appyproduct.product.list.adapter.ProductItemViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_product_in_list"
        android:onClick="@{(view) -> navigator.onItemClick(view)}">

        <LinearLayout
            android:id="@+id/llItemView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_product_in_list"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="@dimen/width_thumbnail_product_in_list"
                        android:layout_height="@dimen/width_thumbnail_product_in_list"
                        android:id="@+id/ivThumbnail"
                        imageUrl="@{viewModel.imageURL}"
                        layout_height="@{viewModel.isSmall ? @dimen/width_thumbnail_product_in_list_small :  @dimen/width_thumbnail_product_in_list}"
                        layout_width="@{viewModel.isSmall ? @dimen/width_thumbnail_product_in_list_small :  @dimen/width_thumbnail_product_in_list}"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/tvTitleProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lines="2"
                            android:text="@{viewModel.title}"
                            android:textColor="@color/gray_product_in_list"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:lineSpacingExtra="4dp"
                                android:text="From"
                                android:textColor="@color/gray_product_in_list"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvOriginalPrice"
                                fontPath="fonts/TitilliumWeb-Bold.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:lineSpacingExtra="4dp"
                                android:text="RM 546.4"
                                android:textColor="@color/gray_product_in_list"
                                android:textSize="11sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvPrice"
                                fontPath="fonts/TitilliumWeb-Bold.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.price}"
                                android:textColor="@color/red_price"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ibAddFavorite"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:clickable="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageButton
                                    isFavorite="@{viewModel.isFavorite}"
                                    android:layout_width="18dp"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="1dp"
                                    android:background="@mipmap/icon_unfavorite" />

                                <TextView
                                    android:id="@+id/favoriteCount"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:paddingTop="2dp"
                                    android:text="@{viewModel.favoriteCount}"
                                    android:textColor="@color/gray_product_in_list"
                                    android:textSize="9sp" />
                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:clickable="false"
                                    android:numStars="5"
                                    android:rating="@{viewModel.rate}"
                                    android:scaleX=".7"
                                    android:scaleY=".7"
                                    android:stepSize="0.5" />

                                <TextView
                                    android:id="@+id/ratingCount"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="-10dp"
                                    android:layout_toEndOf="@id/ratingBar"
                                    android:paddingTop="2dp"
                                    android:text="@{viewModel.rateCount}"
                                    android:textColor="@color/gray_product_in_list"
                                    android:textSize="9sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/llItemView"
            android:layout_marginTop="-6dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/icon_limit_offer"
            android:visibility="@{viewModel.isDiscount, default=visible}" />
    </RelativeLayout>
</layout>