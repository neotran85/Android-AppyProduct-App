<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.appyhome.appyproduct.mvvm.ui.appyproduct.product.list.adapter.ProductItemViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/llItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/product_in_list_bg"
        android:orientation="vertical"
        android:paddingBottom="28dp"
        android:paddingLeft="@dimen/padding_left_product_in_list"
        android:paddingRight="@dimen/padding_left_product_in_list"
        android:paddingTop="16dp">

        <ImageView

            android:id="@+id/ivThumbnail"
            imageUrl="@{viewModel.imageURL}"
            android:layout_width="@dimen/size_thumbnail_product_in_list"
            android:layout_height="@dimen/size_thumbnail_product_in_list" />

        <TextView
            android:id="@+id/tvTitleProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="2"
            android:text="@{viewModel.title}"
            android:textColor="@color/gray_product_in_list"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOriginalPrice"
                fontPath="fonts/TitilliumWeb-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="4dp"
                android:text="RM 546.4"
                android:textColor="@color/gray_product_in_list"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPrice"
                fontPath="fonts/TitilliumWeb-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.price}"
                android:textColor="@color/red_price"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:clickable="true"
                android:id="@+id/ibAddFavorite"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center">

                <ImageButton
                    isFavorite="@{viewModel.isFavorite}"
                    android:layout_width="18dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="1dp"
                    android:background="@mipmap/icon_unfavorite"/>
                <TextView
                    android:id="@+id/favoriteCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:paddingTop="2dp"
                    android:text="@{viewModel.favoriteCount}"
                    android:textColor="@color/gray_product_in_list"
                    android:textSize="9sp" />
            </LinearLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:clickable="false"
                    android:numStars="5"
                    android:rating="@{viewModel.rate}"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/ratingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_toEndOf="@id/ratingBar"
                    android:paddingTop="2dp"
                    android:text="@{viewModel.rateCount}"
                    android:textColor="@color/gray_product_in_list"
                    android:textSize="9sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>