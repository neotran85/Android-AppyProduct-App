<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Toolbar" parent="Base.Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.Action.Positive" parent="Button">
        <item name="android:textColor">@drawable/button_positive_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Action.Negative" parent="Button">
        <item name="android:textColor">@drawable/button_negative_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ProductDetailTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabbarTextAppearance</item>
    </style>

    <style name="TabbarTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_tab</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppyToast">
        <item name="textColor">@color/white</item>
        <item name="textSize">13sp</item>
        <item name="colorBackground">@color/colorAccent</item>
        <item name="gravity">center</item>
        <item name="radius">20dp</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="AppyToast_ErrorConnection" parent="AppyToast">
        <item name="iconStart">@drawable/ic_signal_wifi_off_white_24dp</item>
    </style>

    <style name="AppyToast_Account" parent="AppyToast">
        <item name="iconStart">@drawable/ic_person_white_24dp</item>
    </style>

    <style name="AppyToast_Error" parent="AppyToast">
        <item name="iconStart">@drawable/ic_error_outline_white_24dp</item>
    </style>

    <style name="AppyToast_Cart" parent="AppyToast">
        <item name="iconStart">@drawable/ic_shopping_cart_white_24dp</item>
    </style>

    <style name="AppyToast_Favorite" parent="AppyToast">
        <item name="iconStart">@drawable/ic_favorite_white_24dp</item>
    </style>

    <style name="AppyToast_VisaCard" parent="AppyToast">
        <item name="iconStart">@drawable/ic_credit_card_white_24dp</item>
    </style>
</resources>
